{
    "name": "dimboo-server",
    "version": "1.0.0",
    "description": "Server side code for Dimboo website",
    "main": "src/app.ts",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
        "build": "rimraf dist && npx tsc",
        "start": "node dist/app.js",
        "format": "prettier --write \"**/*.+(ts|json|yml|yaml|md|hbs|yml)\"",
        "lint": "eslint --ext .ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "dev:migrate": "npx prisma migrate dev",
        "migrate": "npx prisma migrate deploy"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dimbooapp/dimboo_server.git"
    },
    "author": "7Span",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dimbooapp/dimboo_server/issues"
    },
    "homepage": "https://github.com/dimbooapp/dimboo_server#readme",
    "devDependencies": {
        "@faker-js/faker": "^8.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.197",
        "@types/morgan": "^1.9.4",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.5.0",
        "@types/validator": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^36.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^3.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cron": "^2.4.3",
        "dayjs": "^1.11.9",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.1",
        "lodash": "^4.17.21",
        "mongoose": "^7.5.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "validator": "^13.11.0",
        "winston": "^3.10.0",
        "zod": "^3.22.1"
    }
}
